package week1.day2;

//Goal: To find whether a number is an Armstrong number or not

public class ArmStrongNumber{
	 
public static void main(String[] args) {
	
	int number = 153;
	int original = number;
	int num;
	int check = 0;
	
	while (number > 0) {
			num = number % 10;
			check = check + (num * num * num);
			number = number / 10;
			
	}
	if (original == check) {
		System.out.println( check + " number is an Armstrong number ");
	}
	else {
		System.out.println(check +" number is not an Armstrong number");
		}
	}
}
